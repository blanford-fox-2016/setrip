<% include ../partials/header %>


    <div class="container">

      <header class="jumbotron">
      <div class="container trips">
        <h1>Welcome to setrip.id!</h1>
        <p>Adventure together</p>
        <p><a class="btn btn-success btn-large" href="/trips/new">SHARE YOUR JOURNEY</a>
        </p>
      </div>
        </header>

      <div class="row text-center" style="display:flex; flex-wrap: wrap;">

        <% trips.forEach(function(trip) { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
            <img src="<%= trip.image %>">
            <div class="caption">
              <h4><%= trip.name %></h4>
            </div>
            <p>
              <a href="/trips/<%= trip._id %>" class="btn btn-primary">Read More</a>
            </p>
              </div>
          </div>

        <% }) %>
        </div>
      </div>

<% include ../partials/footer %>
